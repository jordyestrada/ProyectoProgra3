<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="cr.una.reservas.frontend.ui.test.TestController"
      spacing="20" alignment="CENTER" 
      prefWidth="500" prefHeight="400"
      style="-fx-background-color: #f5f5f5;">
    
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    
    <!-- Título -->
    <Label text="🎉 Prueba de FXML + SceneBuilder" 
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    
    <Label text="Esta es una vista de prueba creada con FXML" 
           style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
    
    <Separator/>
    
    <!-- Campo de texto -->
    <VBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Escribe algo:"/>
        <TextField fx:id="inputField" promptText="Ingresa un texto..." 
                   prefWidth="300"/>
    </VBox>
    
    <!-- Botones -->
    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="testButton" text="Probar" 
                onAction="#handleTest"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 30;"/>
        
        <Button fx:id="clearButton" text="Limpiar" 
                onAction="#handleClear"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 30;"/>
    </HBox>
    
    <!-- Resultado -->
    <VBox spacing="10" alignment="CENTER" 
          style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #ddd; -fx-border-radius: 5;">
        <Label text="Resultado:"/>
        <Label fx:id="resultLabel" text="Haz clic en 'Probar'" 
               style="-fx-font-size: 16px; -fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
    </VBox>
    
    <!-- Botón para volver -->
    <Separator/>
    <Button fx:id="backButton" text="← Volver al Login" 
            onAction="#handleBack"
            style="-fx-background-color: transparent; -fx-text-fill: #3498db; -fx-underline: true;"/>
</VBox>
